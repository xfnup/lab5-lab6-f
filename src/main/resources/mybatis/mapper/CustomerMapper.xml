<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dblab2.mapper.CustomerMapper">
    <insert id="addCustomer" parameterType="Customer">
        insert into customer(c_name,c_type) values(#{c_name},#{c_type})
    </insert>

    <delete id="deleteCustomer" parameterType="Customer">
        delete from customer where c_id=#{c_id}
    </delete>

    <select id="selectCustomer" resultType="Customer">
        select * from customer;
    </select>

    <select id="searchCustomer" resultType="Customer">
        select * from customer where c_name like #{name};
    </select>
</mapper>