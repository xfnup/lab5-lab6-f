<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dblab2.mapper.AccessunitMapper">
    <insert id="addAccessunit" parameterType="Accessunit">
        insert into accessunit(a_id,au_seq,g_id,au_num,au_price) values(#{a_id},#{au_seq},#{g_id},#{au_num},#{au_price})
    </insert>

    <delete id="deleteAccessunit" parameterType="Accessunit">
        delete from accessunit where au_seq = #{au_seq}
    </delete>

    <update id="updateAccessunit" parameterType="Accessunit">
        update accessunit set au_num=#{au_num} where a_id=#{a_id} and g_id=#{g_id}
    </update>

    <select id="detailAccessunit" resultType="AccessunitView">
        select a_id,au_seq,accessunit.g_id,g_name,au_num,au_price from accessunit,goods where goods.g_id=accessunit.g_id and a_id = #{a_id}
    </select>

    <select id="selectAccessunit" resultType="Accessunit">
        select * from accessunit;
    </select>
</mapper>