<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dblab2.mapper.PayMapper">
    <insert id="addPay" parameterType="Pay">
        insert into pay values(#{o_id},#{p_tprice},#{p_pprice},#{p_rprice});
    </insert>

    <delete id="deletePay" parameterType="int">
        delete from pay where o_id=#{o_id}
    </delete>

    <update id="updatePay" parameterType="Pay">
        update pay set p_tprice=#{p_tprice},p_pprice=#{p_pprice},p_rprice=#{p_rprice} where o_id=#{o_id}
    </update>

    <select id="selectPay" resultType="Pay">
        select * from pay where o_id=#{o_id}
    </select>

    <select id="selectpayview" resultType="payview">
        select p_tprice,p_rprice,p_pprice from pay where pay.o_id in (select output.o_id from output where output.c_id=#{c_id})
    </select>
</mapper>